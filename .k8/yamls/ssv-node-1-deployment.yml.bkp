---
apiVersion: v1
kind: Service
metadata:
  name: ssv-node-1-svc
  namespace: REPLACE_NAMESPACE
  labels:
    app: ssv-node-1
spec:
  type: ClusterIP
  ports:
    - port: 5678
      protocol: TCP
      targetPort: 5678
      name: port-5678
    - port: 4000
      protocol: UDP
      targetPort: 4000
      name: port-4000
    - port: 5000
      protocol: TCP
      targetPort: 5000
      name: port-5000        
  selector:
    app: ssv-node-1
---
